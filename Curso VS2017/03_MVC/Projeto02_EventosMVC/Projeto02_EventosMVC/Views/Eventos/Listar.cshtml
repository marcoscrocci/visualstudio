@model IEnumerable<Projeto02_EventosMVC.Models.Evento>

@{
    ViewBag.Title = "Listar";
}

<h2>Listar todos os Eventos</h2>

@if (!string.IsNullOrEmpty(ViewBag.Mensagem))
{
    <div class="alert alert-success">
        @ViewBag.Mensagem
    </div>
}

<p>
    @Html.ActionLink("Criar novo Evento", "Incluir")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Data)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Responsavel)
        </th>
        <th class="text-right">
            @Html.DisplayNameFor(model => model.Valor)
        </thclass="text-right">
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Data)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Responsavel)
        </td>
        <td class="text-right">
            @Html.DisplayFor(modelItem => item.Valor)
        </td>
        <td>
            @Html.ActionLink("Alterar", "Alterar", new { id=item.Id }) |            
            @Html.ActionLink("Remover", "Remover", new { id=item.Id })
        </td>
    </tr>
}

</table>
