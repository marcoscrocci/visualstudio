@model IEnumerable<Projeto02_EventosMVC.Models.PagamentoEvento>

@{
    ViewBag.Title = "ListarPagamentos";
}

<h2>ListarPagamentos</h2>

<p>
    @Html.ActionLink("Efetuar Pagamento", "EfetuarPagamento")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdConvidado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumeroCartao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valor)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IdConvidado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumeroCartao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Valor)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
